<div class="container">

  <div class="row ">
    <h1>Welcome to the longest word-game !</h1>
    <p>Here is your grid : <%= @grid.join(" ") %> </p>
  </div>

  <div class="row ">

    <form class="form-horizontal" action="/score" method="get">
      <div class="form-group">
        <label for="inputSize" class="col-sm-2 control-label">What's your best shot ?</label>
        <div class="col-sm-10">
          <input name="attempt" type="text"  placeholder="type your best guess here ....">
          <input name="grid" type="hidden" value="<%= @grid.join(" ") %>" />
          <input name="start_time" type="hidden" value="<%= @start_time %>" />
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>

  </div>

</div>
